{
	"name": "@flam/compiler",
	"version": "0.0.2",
	"license": "MIT",
	"packageManager": "pnpm@10.19.0",
	"engines": {
		"node": "24.10.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jamtartley/flam.git"
	},
	"exports": "./dist/index.js",
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"dev": "concurrently --names 'SMOKE,TEST' --prefix-colors 'cyan,magenta' 'pnpm run dev:smoke' 'pnpm run dev:test'",
		"dev:smoke": "nodemon --watch examples --ext flam,ts --watch smoke.test.ts --watch src --exec 'node --import tsx --test smoke.test.ts'",
		"dev:test": "glob -c \"nodemon --exec node --import tsx --no-warnings --test\" \"./src/**/*.test.ts\"",
		"lint": "eslint src/ --max-warnings 0",
		"smoke": "node --import tsx --test smoke.test.ts",
		"test": "glob -c \"node --import tsx --no-warnings --test\" \"./src/**/*.test.ts\"",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"io-ts": "^2.2.21"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@commitlint/prompt": "^19.2.0",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@types/node": "^20.11.30",
		"@typescript-eslint/eslint-plugin": "^8.42.0",
		"@typescript-eslint/parser": "^8.42.0",
		"@vercel/style-guide": "^5.2.0",
		"concurrently": "^9.2.1",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-only-warn": "^1.1.0",
		"eslint-plugin-unused-imports": "^4.2.0",
		"glob": "^10.3.10",
		"globals": "^16.3.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"ts-node": "^10.9.2",
		"tsup": "^8.0.2",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3",
		"typescript-eslint": "^8.42.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "eslint --cache --fix",
		"*.{js,jsx,ts,tsx,css,md,json}": "prettier --write"
	}
}

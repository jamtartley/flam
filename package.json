{
	"name": "@jamtartley/flam",
	"version": "0.0.2",
	"license": "MIT",
	"packageManager": "pnpm@10.19.0",
	"engines": {
		"node": "24.10.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jamtartley/flam.git"
	},
	"main": "./dist/index.js",
	"exports": "./dist/index.js",
	"files": [
		"README.md",
		"dist/"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"dev": "concurrently --names 'SMOKE,TEST' --prefix-colors 'cyan,magenta' 'pnpm run dev:smoke' 'pnpm run dev:test'",
		"dev:smoke": "nodemon --watch examples --ext flam,ts --watch smoke.test.ts --watch src --exec 'node --import tsx --test smoke.test.ts'",
		"dev:test": "glob -c \"nodemon --exec node --import tsx --no-warnings --test\" \"./src/**/*.test.ts\"",
		"lint": "eslint src/ --max-warnings 0",
		"smoke": "node --import tsx --test smoke.test.ts",
		"test": "glob -c \"node --import tsx --no-warnings --test\" \"./src/**/*.test.ts\"",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"io-ts": "^2.2.22"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@types/node": "^24.9.1",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"@vercel/style-guide": "^6.0.0",
		"concurrently": "^9.2.1",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-only-warn": "^1.1.0",
		"eslint-plugin-unused-imports": "^4.3.0",
		"glob": "^11.0.3",
		"globals": "^16.4.0",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2"
	}
}
